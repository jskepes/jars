
<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>Plant Name</th>
      <th>Plant note</th>
      <th>Plant note date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plant_notes.each do |plant_note| %>
      <tr>
        <td><%= link_to plant_note.full_name, plant_note.plant %></td>            
        <td><%= plant_note.plant_note %></td>
        <td><%= plant_note.plant_note_date %></td>
        <td><%= link_to 'Show', plant_note %></td>
        <td><%= link_to 'Edit', edit_plant_note_path(plant_note) %></td>
        <td><%= link_to 'Destroy', plant_note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



