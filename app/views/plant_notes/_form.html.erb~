<%= form_for(@plant_note) do |f| %>
  <% if @plant_note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plant_note.errors.count, "error") %> prohibited this plant_note from being saved:</h2>

      <ul>
      <% @plant_note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :plant_id %><br>
    <%= f.text_field :plant_id %>
  </div>
  <div class="field">
    <%= f.label :plant_note %><br>
    <%= f.text_area :plant_note %>
  </div>
  <div class="field">
    <%= f.label :plant_note_date %><br>
    <%= f.date_select :plant_note_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
