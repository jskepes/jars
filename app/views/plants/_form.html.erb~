<%= form_for(@plant) do |f| %>
  <% if @plant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plant.errors.count, "error") %> prohibited this plant from being saved:</h2>

      <ul>
      <% @plant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 
  <div class="field">
    <%= f.label :seed_id %><br>
    <%= f.select(:seed_id, options_for_select(@s_array2)) %>
  </div>
  
  <div class="field">
    <%= f.label :plant_number %><br>
    <%= f.number_field :plant_number %>
  </div>
  <div class="field">
    <%= f.label :plant_type %><br>
    <%= f.text_field :plant_type %>
  </div>
  <div class="field">
    <%= f.label :date_wet %><br>
    <%= f.date_select :date_wet %>
  </div>
  <div class="field">
    <%= f.label :date_root %><br>
    <%= f.date_select :date_root, {:include_blank => true, :default => nil} %>
  </div>
  <div class="field">
    <%= f.label :date_dirt %><br>
    <%= f.date_select :date_dirt, {:include_blank => true, :default => nil} %>
  </div>
  <div class="field">
    <%= f.label :date_grow %><br>
    <%= f.date_select :date_grow, {:include_blank => true, :default => nil} %>
  </div>
  <div class="field">
    <%= f.label :date_1gal %><br>
    <%= f.date_select :date_1gal, {:include_blank => true, :default => nil} %>
  </div>
  <div class="field">
    <%= f.label :date_5gal %><br>
    <%= f.date_select :date_5gal, {:include_blank => true, :default => nil} %>
  </div>
  <div class="field">
    <%= f.label :date_12hr %><br>
    <%= f.date_select :date_12hr, {:include_blank => true, :default => nil} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
